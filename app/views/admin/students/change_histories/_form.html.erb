<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">顧客カードの変更履歴を編集</h4>
    </div>
    <%= simple_form_for(@student, url: admin_student_change_history_path(@student), remote: true) do |f| %>
      <div class="modal-body">
        <%= f.error_notification %>
        <%= f.input :change_history, label: false, input_html: {rows: 16} %>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, '更新', class: 'btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
