<section class="content-header">
  <h1>管理者一覧</h1>
</section>

<section class="content">
  <div class="box">
    <div class="box-body no-padding">
      <table class="table table-bordered table-hover">
        <thead>
        <tr>
          <th><%= sort_link(@q, :id, '#') %></th>
          <th>管理者名</th>
          <th>Eメール</th>
          <th>権限</th>
          <th>操作</th>
        </tr>
        </thead>

        <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.id %></td>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>
            <td>
              <% admin.roles.each do |role| %>
                <%= AdminRole.names.key(role.id) %>
              <% end %>
            </td>
            <td>
              <%= link_to '編集', edit_admin_admin_path(admin), class: 'btn btn-xs btn-warning' %>
              <%= link_to '削除', admin_admin_path(admin), class: 'btn btn-xs btn-danger', method: :delete, data: {confirm: '削除しますか？' } %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="box-footer">
      <%= paginate @admins, theme: 'admin' %>
    </div>
  </div>
</section>
