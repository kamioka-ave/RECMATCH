<section class="content-header">
  <h1>キャンセル時のアンケート項目</h1>
</section>

<section class="content">
  <div class="box">
    <div class="box-body no-padding">
      <table class="table">
        <tr>
          <th>キャンセル理由</th>
          <th>表示順位</th>
          <th>操作</th>
        </tr>
        <% @cancel_reason_questions.each do |q| %>
          <tr>
            <td><%= q.name %></td>
            <td><%= q.rank %></td>
            <td>
                <%= link_to '編集', edit_admin_cancel_reason_question_path(q), class: 'btn btn-xs btn-warning' %>
              <% unless q.id == 6 %>
                <%= link_to '削除', admin_cancel_reason_question_path(q), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: '削除しますか？' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="box-footer">
      <%= link_to '登録', new_admin_cancel_reason_question_path, class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</section>
