<div class="row projects media">
  <div class="col-md-7">
    <% if project.status == Project::S_EXECUTED %>
      <div class="ribbon executed">
        <div class="title">成 約</div>
      </div>
    <% elsif project.angel_type != Project::ANGEL_TYPE_NONE %>
      <div class="ribbon angel">
        <div class="title">エンジェル税制申請予定</div>
      </div>
    <% elsif project.shareholder_benefit %>
      <div class="ribbon shareholder-benefit">
        <div class="title">株主優待あり</div>
      </div>
    <% end %>
    <% if project.case_studies.size > 0 %>
      <div class="interview">
        <div class="title">
          <i class="fa fa-microphone pr-5"></i>インタビューあり
        </div>
      </div>
    <% end %>
    <%= link_to project do %>
      <%= image_tag(project.image.thumb16by9.url, class: 'swmain', width: '100%', alt: project.name) %>
    <% end %>
  </div>
  <div class="col-md-5">
    <div class="details-wrapper">
      <div class="mb-20">
        <%= render 'projects/details', project: project, title: true, succeeded: false %>
      </div>
      <div class="mb-20">
        <%= link_to 'もっとみる', project_path(project), class: 'btn btn-block btn-lg btn-primary' %>
      </div>
    </div>
  </div>
</div>
