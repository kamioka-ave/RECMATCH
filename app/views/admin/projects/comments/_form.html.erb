<%= simple_form_for(comment, url: project_comments_path(project_id: project), remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.input :comment, label: false, placeholder: 'コメントを入力' %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.button :submit, '送信', class: 'btn-block btn-primary' %>
    </div>
  </div>
<% end %>
