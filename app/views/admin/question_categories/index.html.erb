<section class="content-header">
  <h1>よくある質問のカテゴリー</h1>
</section>

<section class="content">
  <div class="box">
    <div class="box-body no-padding">
      <table class="table">
        <thead>
        <tr>
          <th><%= t('activerecord.attributes.question_category.type') %></th>
          <th><%= t('activerecord.attributes.question_category.name') %></th>
          <th><%= t('activerecord.attributes.question_category.rank') %></th>
          <th>操作</th>
        </tr>
        </thead>

        <tbody>
        <% @question_categories.each do |c| %>
          <tr>
            <td><%= QuestionCategory.names_with_type.key(c.type) %></td>
            <td><%= c.name %></td>
            <td><%= c.rank %></td>
            <td>
              <%= link_to '編集', edit_admin_question_category_path(c), class: 'btn btn-xs btn-warning' %>
              <% if c.questions.size == 0 %>
                <%= link_to '削除', admin_question_category_path(c), method: :delete, class: 'btn btn-xs btn-danger', data: {confirm: '削除しますか？' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="box-footer">
      <%= link_to '追加', new_admin_question_category_path, class: 'btn btn-primary' %>
    </div>
  </div>
</section>
