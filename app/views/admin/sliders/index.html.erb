<section class="content-header">
  <h1>トップスライダー</h1>
</section>

<section class="content">
  <div class="box">
    <div class="box-body no-padding">
      <table class="table">
        <tr>
          <th>タイプ</th>
          <th>ID</th>
          <th>タイトル</th>
          <th>表示順位</th>
          <th>操作</th>
        </tr>
        <% @sliders.each do |s| %>
          <tr>
            <td><%= Slider.names_with_slider_type.key(s.slider_type) %></td>
            <td><%= s.slidable_id %></td>
            <td><%= s.title %></td>
            <td><%= s.rank %></td>
            <td>
              <%= link_to '編集', edit_admin_slider_path(s), class: 'btn btn-xs btn-warning' %>
              <%= link_to '削除', admin_slider_path(s), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: '削除しますか？' } %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <% if @sliders.size < 10 %>
      <div class="box-footer">
        <%= link_to '登録', new_admin_slider_path, class: 'btn btn-sm btn-primary' %>
      </div>
    <% end %>
  </div>
</section>