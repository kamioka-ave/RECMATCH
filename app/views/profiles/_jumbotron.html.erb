<div class="pm-overview c-overflow">
  <div class="pmo-pic">
    <div class="p-relative">
      <%= link_to @profile do %>
        <%= profile_image(@profile, class: "img-responsive") %>
      <% end %>
    </div>
    <div class="pmo-stat">
      <h2 class="m-0 c-white"><%= @profile.name %></h2>
    </div>
  </div>

  <% if false #@profile.user.has_role?(:student) && (!user_signed_in? || current_user.id != @profile.user_id) %>
    <div class="pmo-block">
      <%= link_to new_mypage_message_path(recipient_id: @profile.user_id), remote: user_signed_in?, class: "btn btn-block btn-primary" do %>
        <i class="fa fa-envelope p-r-10"></i>メッセージで質問や意見を送る
      <% end %>
    </div>
    <div id="message-modal" class="modal fade" tabindex="-1"></div>
  <% end %>
</div>
