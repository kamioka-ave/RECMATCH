<% content_for(:page_classes) { 'mypage students edit_wizard students show'} %>

<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <div class="card">
      <div class="card-header">
        <h2><span><i class="fa fa-wrench" aria-hidden="true"></i> 学生申請内容の入力</h2>
      </div>
      <%= simple_form_for(@student, url: mypage_student_edit_wizard_student_path, wrapper: 'horizontal_form', html: { class: 'form-horizontal' }) do |f| %>
        <div class="card-body card-padding">
          <%= f.error_notification %>
          <%= render 'mypage/students/form', { f: f } %>
        </div>
        <div class="card-footer card-padding">
          <div class="clearfix">
            <div class="pull-left">
              <%= link_to '戻る', details_mypage_student_path, class: 'btn btn-lg btn-info-o' %>
            </div>
            <div class="pull-right">
              <%= f.button :submit, '次へ', class: 'btn-lg btn-info' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>