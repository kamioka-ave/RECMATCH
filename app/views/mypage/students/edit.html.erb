<% content_for(:page_classes) { 'mypage students edit' } %>

<div class="card">
  <div class="card-header with-border mb-20">
    <h1>学生申請内容の編集</h1>
  </div>
  <div class="card-body card-padding">
    <%= simple_form_for([:my, @student], wrapper: 'horizontal_form', html: {class: 'form-horizontal'}) do |f| %>
      <%= f.error_notification %>
      <%= render 'form', {f: f} %>
      <div class="row m-t-40">
        <div class="col-sm-9 col-sm-offset-3">
          <%= f.button :submit, '更新', class: 'btn-lg btn-info' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
