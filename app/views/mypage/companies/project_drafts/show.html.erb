<% content_for(:page_classes) { 'mypage companies basic show' } %>

<% if Company.find(current_user.company.id).business_summary.blank? %>
<div class="card z-depth-1">
  <div class="card-header text-center">
    <h3><span><i class="fa fa-wrench" aria-hidden="true"></i> 採用情報の編集</span></h3>
  </div>
  <div class="card-body card-padding">
    <div class="p-20 m-b-30 text-center" style="background-color:#FFBBFF;color:#FF0000;">
      採用情報は<%= link_to '企業詳細情報', mypage_company_detail_path %>の入力完了後に登録できます。
  </div>
</div>
<% else %>
<div class="card z-depth-1">
  <div class="card-header text-center">
    <h3><span><i class="fa fa-wrench" aria-hidden="true"></i> 採用情報の編集</span></h3>
  </div>
  <div class="card-body card-padding">
    <div class="p-20 mb-30 text-center" style="background-color:#FFFFBB;color:#999999;">
      <span title="required">*</span> 印は必須入力項目です<br>
      入力後、更新ボタンを押してください
    </div>
    <%= simple_form_for(@draft, url: mypage_company_project_drafts_path, method: 'patch', html: {class: 'form-horizontal'}) do |f| %>
      <%= f.error_notification %>
      <%= render 'form', f: f %>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-5">
          <%= button_tag '保存する', class: 'btn-lg btn-info' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
