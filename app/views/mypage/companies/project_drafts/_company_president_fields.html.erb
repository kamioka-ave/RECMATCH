<div class="well">
  <fieldset class="row mb-10">
    <div class="col-md-10">
      <%= f.input :position, label: t('activerecord.attributes.project_company_president.position') %>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :last_name, label: t('activerecord.attributes.project_company_president.last_name') %>
          <%= f.input :last_name_kana, label: t('activerecord.attributes.project_company_president.last_name_kana') %>
        </div>
        <div class="col-md-6">
          <%= f.input :first_name, label: t('activerecord.attributes.project_company_president.first_name') %>
          <%= f.input :first_name_kana, label: t('activerecord.attributes.project_company_president.first_name_kana') %>
        </div>
      </div>
    </div>
    <div class="col-md-2 text-right">
      <%= f.hidden_field :_destroy %>
      <%= link_to '#', class: 'ml-10 remove_fields' do %>
        <i class="fa fa-minus-circle"></i> 削除
      <% end %>
    </div>
  </fieldset>
</div>
