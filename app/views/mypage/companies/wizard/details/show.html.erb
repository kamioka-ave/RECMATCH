<% content_for(:page_classes) { 'mypage companies wizard details show' } %>

<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <div class="card">
      <div class="card-body">
        <%= render 'mypage/companies/wizard/progress', {step: 3} %>
      </div>
      <div class="card-body card-padding">
        <%= simple_form_for(@company, url: mypage_company_wizard_detail_path, wrapper: 'horizontal_form', html: {class: 'form-horizontal'}) do |f| %>
          <div class="text-center text-info mb-10">
            こちらの項目は登録完了後も編集可能です
          </div>
          <div class="row mb-35">
            <div class="col-md-4 col-md-offset-4">
            </div>
          </div>
          <%= f.error_notification %>
          <%= f.hidden_field :user_id %>
          <%= f.hidden_field :status, value: Company::S_DETAILS %>
          <%= render 'mypage/companies/details/form', f: f %>
          <div class="clearfix">
            <div class="pull-left">
              <%= link_to '前へ', mypage_company_wizard_basic_path, class: 'btn btn-lg btn-info-o' %>
            </div>
            <div class="pull-right">
              <%= f.button :submit, '次へ', class: 'btn-lg btn-info' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
