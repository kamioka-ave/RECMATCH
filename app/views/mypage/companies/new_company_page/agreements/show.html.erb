<% content_for(:page_classes) { 'my companies funding agreements show' } %>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="card">
      <div class="card-header text-center">
        <h1><span><i class="fa fa-reply-all" aria-hidden="true"></i> 学生募集ページ作成のお申込み</span></h1>
      </div>

      <div class="card-body card-padding">
        <div class="tab-content">
          <%= simple_form_for(@company, url: mypage_company_new_company_page_agreement_path) do |f| %>
            <%= f.error_notification %>
            <%= f.hidden_field :user_id %>

            <div class="row">
              <div class="col-md-9 col-md-offset-2">
              <%= content_for(:agree_with_clause_label) do %>
                <%= link_to 'RECMATCH利用規約', kiyaku_pages_path, target: '_blank', id: 'agree_with_clause', class: 'text-info' %>の記載内容を確認しました
              <% end %>
              <%= f.input :agree_with_clause, label: content_for(:agree_with_clause_label), required: true %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-8 col-md-offset-2">
                <%= f.button :submit, '同意して申込む', class: 'btn-block btn-lg btn-info' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%=
  jquery_view(
    'views.mypage.companies.newcompanypage.agreements.FormView',
    turbolinks: true,
    isClauseOpened: @company.errors.size != 0,
    isReviewOpened: @company.errors.size != 0
  )
%>