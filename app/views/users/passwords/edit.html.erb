<% content_for(:title) {"パスワードの再設定" } %>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="card shadow-lg">
      <div class="card-header">
        <h1>パスワードの再設定</h1>
      </div>
      <div class="card-body card-padding">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <%= f.input :password, label: "新しいパスワード", required: true, autofocus: true, hint: ("#{@minimum_password_length}文字以上" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "新しいパスワード（確認）", required: true %>
          <%= f.button :submit, "再設定", class: "btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
