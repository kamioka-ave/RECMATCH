<div class="login-box">
  <div class="login-logo">
    <%= link_to Settings.application_name, root_path %>
  </div>
  <div class="login-box-body">
    <p class="login-box-msg">パスワードの変更</p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :current_password, hint: false, required: true %>
        <%= f.input :password, autocomplete: 'off', hint: false, required: true %>
        <%= f.input :password_confirmation, autocomplete: 'off', required: false %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, '更新する', class: 'btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
