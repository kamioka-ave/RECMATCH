<%= render 'layouts/head' %>
<body class="<%= yield(:page_classes) %>">
<div id="sb-site">
  <%= render 'layouts/header' %>
  <div class="content-wrapper">
    <% unless request.variant.include? :mobile %>
      <div class="tabs-wrapper">
        <div class="container">
          <%= render 'layouts/mypage_nav', active: 'messages' %>
        </div>
      </div>
      <div class="menu-wrapper">
        <div class="container">
          <ul class="tab-nav">
            <li class="<%= 'active' if @box == 'inbox' %>">
              <%= link_to mypage_messages_path(box: 'inbox') do %>
                メッセージ一覧
              <% end %>
            </li>
            <li class="<%= 'active' if @box == 'trash' %>">
              <%= link_to mypage_messages_path(box: 'trash') do %>
                ゴミ箱
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="container">
      <div class="content">
        <div class="row">
          <div class="col-md-9">
            <%= yield %>
          </div>
          <div class="col-md-3">
            <%= render 'mypage/profiles/thumb' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>
</body>
</html>
