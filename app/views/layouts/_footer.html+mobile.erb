<section id="agency-contact" style="padding: 150px 0;">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <%= simple_form_for(PublicMessage.new, url:public_messages_path) do |f| %>
          <div class="row">
            <div class="col-md-6">
              <div class="row">
                <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">- Company -</h2>
                <h3 class="section-subheading text-muted">Our Company Information</h3>
                </div>
              </div>
              <div class="inner01" style="color: #fff;">
                  <div class="text-center"><h3 class="mb-5">株式会社 UNCHAIN</h3></div>
                  <br>
                  <div class="row">
                    <div class="col-xs-4 col-xs-offset-1">
                      事業内容
                    </div>
                    <div class="col-xs-6">
                      就活プラットフォームRECMATCH<br>新卒・中途・海外学生就活支援<br>システム開発・保守
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-4 col-xs-offset-1">
                      従業員数
                    </div>
                    <div class="col-xs-6">
                      20名
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-4 col-xs-offset-1">
                      所在地
                    </div>
                    <div class="col-xs-6">
                      東京都港区南麻布1-4-8<br>
                      <a href="http://unchain.under.jp" target="_blank"><span style="color: #fff;">http://unchain.under.jp</span></a>
                    </div>
                </div>
              </div>
            </div>
            <div class="col-md-6 pt-20">
              <div class="row">
                <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">- Contact -</h2>
                <h3 class="section-subheading text-muted">Please enter the following items and submit "SEND MESSAGE"</h3>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.input :name, label: false, placeholder: "Your Name *" %>
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <%= f.input :email, label: false, placeholder: "Your Email *" %>
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <%= f.input :phone, label: false, placeholder: "Your Phone *" %>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.input :description, as: :text, label: false, placeholder: "Your Message *" %>
                </div>
              </div>
              <div class="clearfix"></div>
              <div class="col-lg-12 text-center">
                <div id="success"></div>
                <%= f.button :submit, 'Send Message', class: 'btn btn-warning-r btn-xl text-uppercase' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
<footer style="background-color:#fff;">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <span class="copyright">Copyright &copy; UNCHAIN.Inc 2019</span>
      </div>
      <div class="col-md-4">
        <ul class="list-inline social-buttons">
          <li class="list-inline-item">
            <a class="btn" data-toggle="modal" data-target="#model__twitter" style="padding:0;">
              <i class="fa fa-twitter pb-10"></i>
            </a>
          </li>
          <li class="list-inline-item">
            <a class="btn" type="button" data-toggle="modal" data-target="#model__facebook" style="padding:0;">
              <i class="fa fa-facebook-f"></i>
            </a>
          </li>
          <li class="list-inline-item">
            <a type="button" data-toggle="modal" data-target="#model__line" class="line-footer btn" style="padding:0;">
              <i class="fa"></i>
            </a>
          </li>
        </ul>
      </div>
      <div class="col-md-4">
        <ul class="list-inline quicklinks">
          <li class="list-inline-item">
            <%= link_to 'Privacy Policy', privacy_policy_pages_path, target: '_blank' %>
          </li>
          <li class="list-inline-item">
            <%= link_to 'About our company', 'http://unchain.under.jp', target: '_blank' %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="modal fade" id="model__facebook" tabindex="-1" role="dialog" aria-hidden="true">
    <%= render 'layouts/model_social', title: 'RECMATCH -企業と学生のマッチング-', title_modal: 'ここから先はFacebookのサイトに遷移します。', social: 'facebook' %>
  </div>
  <div class="modal fade" id="model__twitter" tabindex="-1" role="dialog" aria-hidden="true">
    <%= render 'layouts/model_social', title: 'RECMATCH -企業と学生のマッチング-', title_modal: 'ここから先はTwitterのサイトに遷移します。', social: 'twitter' %>
  </div>
  <div class="modal fade" id="model__line" tabindex="-1" role="dialog" aria-hidden="true">
    <%= render 'layouts/model_social', title: 'RECMATCH -企業と学生のマッチング-', title_modal: 'ここから先はLINEのサイトに遷移します。', social: 'line' %>
  </div>
</footer>

<% if false %>
  <p id="pageTop">
  <a class="totop" href="#">
    <%= image_tag 'footer/btn_totop.png', alt: 'ページ上部へ' %>
  </a>
  </p>
<% end %>
<style>
.line-footer{
background:center;
background-size: 55px;
background-image:url(<%= asset_path 'social/line3.png' %>);
}
.line-footer:hover{
background-image:url(<%= asset_path 'social/line4.png' %>);
}
</style>

<script>
$('.modal-social__btn.share').on('click', function(){
  const intWidth = '500';
  const intHeight = '400';
  strParam = `width= ${intWidth} ,height= ${intHeight}`;
  window.open(this.href, 'RECMATCH -企業と学生のマッチング-', strParam).focus();
});
</script>
